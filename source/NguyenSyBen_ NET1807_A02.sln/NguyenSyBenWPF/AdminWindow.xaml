        <Label>Control Panel</Label>
        <Button Content="Manage Customers" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" Width="200" Click="ManageCustomersButton_Click"/>
        <Button Content="Manage Room" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,90,0,0" Width="200" Click="ManageRoomButton_Click"/>
