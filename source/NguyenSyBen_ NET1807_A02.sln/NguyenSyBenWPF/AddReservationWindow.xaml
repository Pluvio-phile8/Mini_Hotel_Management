<Window x:Class="NguyenSyBenWPF.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenSyBenWPF"
        mc:Ignorable="d"
        Title="AddReservationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Reservation ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="ReservationId" Margin="0,0,0,10"/>
            <TextBlock Text="Customer ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="CustomerIdTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Booking Date:" Margin="0,0,0,5"/>
            <DatePicker x:Name="BookingDatePicker" Margin="0,0,0,10"/>
            <TextBlock Text="Status:" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="0" />
                <ComboBoxItem Content="1" />
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="CancelButton_Click" Margin="0,10,5,0" Width="80"/>
                <Button Content="Add" Click="AddButton_Click" Margin="0,10,0,0" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
